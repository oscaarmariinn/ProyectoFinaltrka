{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ user.name }}</td>
            </tr>
            <tr>
                <th>Apellidos</th>
                <td>{{ user.surname }}</td>
            </tr>
            <tr>
                <th>Correo Electronico</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Contrase√±a</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>Creado el: </th>
                <td>{{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Activo</th>
                <td>{{ user.active ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_user_index') }}">Volver a la lista</a>

    <a href="{{ path('app_user_edit', {'id': user.id}) }}">Editar Usuario</a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
